(include "../macros.sibilant")
(import-namespace react)
(import-bootstrap)

(import-classes!
 {Tags} "./tags.sibilant"
 {Macro} "./macro.sibilant")

(def-class DocListing
           (var { on-filter-change tags filter docs doc-names } this.props)

           (Grid (Row
                  (Col md-push 7 sm 3
                       (Tags filter filter
                             tags tags
                             on-filter-change on-filter-change))

                  (Col md 7 sm 8 md-pull 3
                       (docs.map (#(doc)
                                   (Macro doc: doc,
                                          doc-names doc-names
                                          filter: filter,
                                          on-filter-change: on-filter-change,
                                          key: doc.name)))))))

(export DocListing)

